---
const { dark, title, titleRight } = Astro.props;
---

<div class="px-[6%] flex flex-col">
  <div
    class:list={[
      title ? "" : "hidden",
      dark ? "bg-white text-midnight" : "bg-white text-midnight",
      titleRight ? "ml-auto mr-[40px]" : "",
      "lg:px-[3%] px-12 font-extrabold lg:text-2xl py-[1%] rounded-t-[25px] mr-auto ml-auto lg:ml-[32px] w-fit",
    ]}
  >
    {title}
  </div>
  <div
    class:list={[
      "border-1",
      dark ? "border-white" : "border-white",
      title ? "rounded-[40px]" : "lg:rounded-[75px] rounded-[50px]",
    ]}
  >
    <slot />
  </div>
</div>
